# Load and unload modules
ACTION=="add" DEVPATH=="/module/i2c-dev" SUBSYSTEM=="module" RUN+="/sbin/modprobe i2c-dev"
ACTION=="remove" DEVPATH=="/module/i2c-dev" SUBSYSTEM=="module" RUN+="/sbin/rmmod i2c_dev"

ACTION=="add" DEVPATH=="/module/pmbus" SUBSYSTEM=="module" RUN+="/sbin/modprobe pmbus"
ACTION=="remove" DEVPATH=="/module/pmbus" SUBSYSTEM=="module" RUN+="/sbin/rmmod pmbus"

ACTION=="add" DEVPATH=="/module/tps53679" SUBSYSTEM=="module" RUN+="/sbin/modprobe tps53679"
ACTION=="remove" DEVPATH=="/module/tps53679" SUBSYSTEM=="module" RUN+="/sbin/rmmod tps53679"

