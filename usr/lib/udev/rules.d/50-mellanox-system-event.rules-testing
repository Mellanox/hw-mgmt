ACTION=="remove" DEVPATH=="/module/at24" SUBSYSTEM=="module" RUN+="/sbin/rmmod at24"

ACTION=="add" DEVPATH=="/module/ledtrig-timer" SUBSYSTEM=="module" RUN+="/sbin/modprobe ledtrig-timer"
